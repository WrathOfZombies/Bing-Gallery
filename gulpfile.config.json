{
  "lib": {
    "js": "./platforms/www/lib/js",
    "css": "./platforms/www/lib/css",
    "fonts": "./platforms/www/lib/fonts"
  },
  "sass": {
    "input": "./src/scss/**/*.scss",
    "output": "./platforms/www/css"
  },
  "ts": {
    "references": "./_references.d.ts",
    "input": "./src/ts/**/*.ts",
    "output": "./platforms/www/js"
  },
  "html": {
    "input": "./platforms/www/**/*.html",
    "output": "./platforms/www"
  },
  "server": {
    "root": "./platforms/www",
    "host": "localhost",
    "port": 8080,
    "fallback": "./platforms/www/index.html"
  }
}