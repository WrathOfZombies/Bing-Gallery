{
    "compileOnSave": false,
    "compilerOptions": {
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "amd",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noImplicitAny": false,
        "outDir": "./public/www/js",
        "removeComments": false,
        "rootDir": "./src/ts",
        "target": "es5"
    },
    "exclude": [
        "node_modules",
        "bower_components"
    ],
    "files": [
        "./typings/tsd.d.ts",
        "./src/ts/app.ts",
        "./src/ts/bootstrapper.ts",
        "./src/ts/core/controllers/home.controller.ts",
        "./src/ts/core/models/bing.image.ts",
        "./src/ts/core/services/bing.service.ts",
        "./src/ts/main.ts",
        "./src/ts/utils/constants/regions.ts",
        "./src/ts/utils/types/enumerations.ts",
        "./src/ts/utils/types/interfaces.ts"
    ],
    "filesGlob": [
        "./src/**/*.ts",
        "./typings/tsd.d.ts"
    ],
    "version": "1.8"
}
