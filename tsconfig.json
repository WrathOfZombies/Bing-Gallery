{
    "compileOnSave": false,
    "compilerOptions": {
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "amd",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noImplicitAny": false,
        "outDir": "./www/app",
        "removeComments": false,
        "rootDir": "./app",
        "target": "es5"
    },
    "exclude": [
        "node_modules",
        "bower_components"
    ],
    "files": [
        "./typings/tsd.d.ts",
        "./app/app.ts",
        "./app/bootstrapper.ts",
        "./app/core/constants.ts",
        "./app/core/enumerations.ts",
        "./app/core/interfaces.ts",
        "./app/home/home.controller.ts",
        "./app/main.ts",
        "./app/services/bing.image.ts",
        "./app/services/bing.service.ts"
    ],
    "filesGlob": [
        "./app/**/*.ts",
        "./typings/tsd.d.ts"
    ],
    "version": "1.8"
}
